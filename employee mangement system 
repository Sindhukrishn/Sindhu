#include <stdio.h>
#include <stdlib.h>

struct employee
{
	int id;
	char name[20];
	char department[20];
	int salary;
};

void display(struct employee a)
{
	printf("employee id = %d\n",a.id);
	printf("employee name=%s\n",a.name);
	printf("employee department=%s\n",a.department);
	printf("employee salary=%d\n",a.salary);
}

int main()
{
	struct employee a[100];
	int n,ch,searchID,found=0,i;

	printf("enter number of employees\n");
	scanf("%d",&n);

	for( i=0; i<n; ++i)
	{
		printf("enter the details of employee %d\n",i+1);
		printf("enter id:\n");
		scanf("%d",&a[i].id);
		printf("enter name:\n");
		scanf("%s",a[i].name);
		printf("enter department:\n");
		scanf("%s",a[i].department);
		printf("enter salary:\n");
		scanf("%d",&a[i].salary);

	}
	do {
		printf("====employee management system====\n");
		printf("1.access all the employee details\n");
		printf("2.search employe details with id\n");
		printf("3.exit\n");

		printf("enter your choice\n");
		scanf("%d",&ch);

		switch(ch)
		{
		case 1 :
			printf("all employee details\n");
			for(i=0; i<n; ++i) {
				display(a[i]);
			
			}
			break;

		case 2:
			printf("search the employee by id\n");
			printf("enter search id");
			scanf("%d",&searchID);
			for(i=0; i<n; ++i)
			{
				if(searchID==a[i].id)
				{
					found=1;
					display(a[i]);
				

					break;
				}
				if(found<1)
				{
					printf("employee not found\n");

				}
			}
			break;

		case 3:
			printf("code exited");
			exit(0);

		default:
			printf("invalid choice\n");
			break;
		}


	} while(1);

	return 0;
}